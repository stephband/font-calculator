{
  "name": "bolt",
  "description": "Generate a CSS stylesheet with a hierarchy of font-sizes that adapt to the width of the viewport.",
  "version": "1.0.0",
  "author": "@stephband",
  "repository": {
    "type": "git",
    "url": "https://github.com/stephband/font-size.git"
  },
  "bugs": {
    "url": "https://github.com/stephband/bolt/issues/"
  },
  "license": "MIT",
  "devDependencies": {
    "eslint": "^6.5.1",
    "rollup": "^1.32.1"
  },
  "scripts": {
    "lint": "eslint ./components/*.js",
    "build-css": "node ../bolt/build-css.js style.min.css ../font-size/package.json",
    "build-module": "rollup ./module.js --o module.rolled.js --f esm"
  },
  "style": [
    "../bolt/fonts/source-sans-pro.css",
    "../bolt/fonts/fira-mono.css",
    "../bolt/css/html.css",
    "../bolt/css/svg.css",
    "../bolt/css/root.css",
    "../bolt/css/body.css",
    "../bolt/css/type.css",
    "../bolt/css/code.css",
    "../bolt/css/content.css",
    "../bolt/css/input.css",
    "../bolt/css/label.css",
    "../bolt/css/button.css",
    "../bolt/css/thumb.css",
    "../bolt/css/table.css",
    "../bolt/css/block.css",
    "../bolt/css/color.css",
    "../bolt/css/text.css",
    "../bolt/css/modifiers.css",
    "../bolt/css/respond.css",
    "../bolt/css/grid.css",
    "../bolt/css/device.css",
    "../bolt/css/var.css",
    "../fn/css/prism-cruncher.css",
    "../dom/css/dom.css",
    "../fn/css/prism-cruncher.css",
    "./css/app.css"
  ]
}
